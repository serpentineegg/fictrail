{
  "manifest_version": 2,
  "name": "FicTrail",
  "version": "1.0",
  "description": "AO3 history search extension",

  "permissions": [
    "tabs",
    "*://archiveofourown.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["*://archiveofourown.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "browser_action": {
    "default_title": "FicTrail - AO3 History Viewer"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}